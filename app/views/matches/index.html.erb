<h1>Listing matches</h1>

<ul>
  <li><%= link_to "New", new_match_path %></li>
</ul>
 
<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
  </tr>
 
  <% @matches.each do |match| %>
    <tr>
      <td><%= match.name %></td>
      <td><%= match.active ? "yes" : "no" %></td>
      <td>
        <%= link_to "Show", match_path(match) %>
        <%= link_to "Edit", edit_match_path(match) %>
        <%= link_to 'Destroy', match_path(match), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
  <% end %>
</table>
